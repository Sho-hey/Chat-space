.side-bar
  .side-bar__user
    .side-bar__user_user-name
      = current_user.name
    .side-bar__user_icon-edit
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'icon'
    .side-bar__user_icon-cog
      = link_to new_group_path do
        = fa_icon 'pencil-square-o', class: 'icon'
  .side-bar__group
    = render partial: "messages/group"
